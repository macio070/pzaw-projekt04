<%- include('./partials/head_partial.ejs') %>

<main class="container h-100 d-flex flex-column align-items-center">
  <h1 class="m-4"><%= title %></h1>
  <a href="/" class="btn btn-primary position-absolute m-3" style="width: 5rem; height: 2.5rem; left: 0">Back</a>

  <div
    class="container-md grid"
    style="width: fit-content;"
  >
    <% games.forEach(game => { %>
    <div class="d-flex justify-content-center align-items-center g-col-12 g-col-sm-6 g-col-md-4 g-col-lg-3">
      <a
        href="/games/<%= game %>"
        class="btn d-flex align-items-center justify-content-center m-2 border border-primary-subtle border-2 rounded"
        style="width: 200px; height: 125px;"
      >
        <img
          src="<% images.forEach(image => { %>
         <% if (image.title == game) { %>
                    <%= image.path %>
                <% } %>
        <% }) %>"
          alt="<%= game %>"
          style="width: 100%; height: 100%; object-fit: contain; object-position: center; display: block;"
          class="img img-fluid"
        />
      </a>
    </div>
    <% }); %>

    <div class="d-flex justify-content-center align-items-center g-col-12 g-col-sm-6 g-col-md-4 g-col-lg-3">
      <a
        href="/new"
        class="btn d-flex align-items-center justify-content-center m-2 border border-primary-subtle-20 border-2 rounded btn-primary-subtle-20"
        style="width: 200px; height: 125px"
      >
      <img src="../assets/plus-circle.svg" alt="plus button" style="filter:invert(1); width: 25px; height: auto;" />
      </a>
    </div>
  </div>
</main>
<%- include('./partials/foot_partial.ejs') %>
